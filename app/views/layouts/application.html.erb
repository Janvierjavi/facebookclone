  <p class="navbar-brand"><i class="fab fa-facebook"></i>acebook</i></p>
  <i class="fab fa-facebook-messenger"></i>
    <%= link_to "Profile", user_path(current_user.id),class:"btn btn-info fas fa-user-circle " %>
    <%= link_to "Logout", session_path(current_user.id), method: :delete, class:"btn btn-info fas fa-sign-out-alt" %>
  <% else %>
  <% end %>
  </nav>
  <div class="container">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %> 
